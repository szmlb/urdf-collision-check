      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="1"/>
      <inertia ixx="0.01" ixy="0" ixz="0" iyy="0.01" iyz="0" izz="0.01"/>
    </inertial>
    <visual>
      <geometry>
        <sphere radius="0.5"/>
      </geometry>
    </visual>
    <collision>
      <geometry>
        <sphere radius="0.5"/>
      </geometry>
    </collision>
  </link>
</robot>
